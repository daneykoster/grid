.grid{
    display:flex;
    flex-flow:row wrap;
    justify-content:center;
}

.row{
    display:flex;
    max-width:800px;
    flex-basis:100%;
    flex-wrap:wrap;
}
full-row{
    @extend .row;
    max-width:100%;
    width:100%;
}

.s1{
    flex-basis:100%;
}
.s2{
    flex-basis:50%;
}
.s3{
    flex-basis:33.3333%;
}
.s4{
    flex-basis:25%;
}

